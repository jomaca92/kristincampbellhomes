---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Kristin Campbell Homes - Your Trusted Real Estate Partner">
	<!-- Hero Section -->
	<section class="relative bg-gradient-to-r from-blue-600 to-blue-800 text-white">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-24">
			<div class="text-center">
				<h1 class="text-4xl md:text-6xl font-bold mb-6">
					Find Your Dream Home
				</h1>
				<p class="text-xl md:text-2xl mb-8 text-blue-100">
					Your trusted real estate partner in the local market
				</p>
				<div class="flex flex-col sm:flex-row gap-4 justify-center">
					<a href="/properties" class="bg-white text-blue-600 px-8 py-3 rounded-lg font-semibold hover:bg-gray-100 transition-colors">
						Browse Properties
					</a>
					<a href="/contact" class="border-2 border-white text-white px-8 py-3 rounded-lg font-semibold hover:bg-white hover:text-blue-600 transition-colors">
						Get in Touch
					</a>
				</div>
			</div>
		</div>
	</section>

	<!-- Features Section -->
	<section class="py-16 bg-white">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
			<div class="text-center mb-12">
				<h2 class="text-3xl font-bold text-gray-900 mb-4">Why Choose Kristin Campbell Homes?</h2>
				<p class="text-lg text-gray-600">Expert guidance through every step of your real estate journey</p>
			</div>
			
			<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
				<!-- Feature 1 -->
				<div class="text-center p-6">
					<div class="bg-blue-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
						<svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
						</svg>
					</div>
					<h3 class="text-xl font-semibold text-gray-900 mb-2">Local Expertise</h3>
					<p class="text-gray-600">Deep knowledge of the local market and neighborhoods</p>
				</div>
				
				<!-- Feature 2 -->
				<div class="text-center p-6">
					<div class="bg-blue-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
						<svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
						</svg>
					</div>
					<h3 class="text-xl font-semibold text-gray-900 mb-2">Personalized Service</h3>
					<p class="text-gray-600">Dedicated support tailored to your unique needs</p>
				</div>
				
				<!-- Feature 3 -->
				<div class="text-center p-6">
					<div class="bg-blue-100 w-16 h-16 rounded-full flex items-center justify-center mx-auto mb-4">
						<svg class="w-8 h-8 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
						</svg>
					</div>
					<h3 class="text-xl font-semibold text-gray-900 mb-2">Fast Results</h3>
					<p class="text-gray-600">Quick turnaround times and efficient processes</p>
				</div>
			</div>
		</div>
	</section>

	<!-- CTA Section -->
	<section class="py-16 bg-gray-50">
		<div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
			<h2 class="text-3xl font-bold text-gray-900 mb-4">Ready to Start Your Journey?</h2>
			<p class="text-lg text-gray-600 mb-8">Let's find your perfect home together</p>
			<a href="/contact" class="bg-blue-600 text-white px-8 py-3 rounded-lg font-semibold hover:bg-blue-700 transition-colors">
				Contact Kristin Today
			</a>
		</div>
	</section>
</Layout>
